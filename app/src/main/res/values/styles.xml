<resources>
        <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
            <item name="colorPrimaryDark">#ff3f3f3f</item>
            <item name="colorPrimary">#ff5f5f5f</item>
            <item name="colorAccent">#ffbfbfbf</item>

            <item name="android:textColor">#ffffffff</item>
            <item name="android:textColorHint">@color/white</item>

            <item name="colorButtonNormal">#ff3f3f3f</item>
            <item name="colorControlNormal">#ff7f7f7f</item>
            <item name="colorControlActivated">#ffffffff</item>
            <item name="colorControlHighlight">#ffffffff</item>
            <!--<item name="android:windowAnimationStyle">@null</item> Removes animation from screen transitions
            -->
        </style>

        <style name="AppTheme.ActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
            <item name="colorPrimaryDark">#ff3f3f3f</item>
            <item name="colorPrimary">#ff5f5f5f</item>
            <item name="colorAccent">#ffbfbfbf</item>

            <item name="android:textColor">#ffffffff</item>
            <item name="android:textColorHint">@color/white</item>

            <item name="colorButtonNormal">#ff3f3f3f</item>
            <item name="colorControlNormal">#ff7f7f7f</item>
            <item name="colorControlActivated">#ffffffff</item>
            <item name="colorControlHighlight">#ffffffff</item>
        </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_height">45dip</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>

    <style name="MyActionBar"
        parent="@style/AppTheme.ActionBar">
        <item name="android:logo">@drawable/classbuddies</item>
        <item name="displayOptions">useLogo</item>
    </style>
    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>