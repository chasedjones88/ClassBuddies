<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/background_2">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="55dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/class_buds_logo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/welcome_to_classbuddies"
            app:srcCompat="@drawable/welcome_to_classbuddies" />

        <TextView
            android:id="@+id/check_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:gravity="center_horizontal"
            android:text="Check your email for an activation link."
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:weightSum="1"
        android:layout_below="@+id/warnSpamBox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="175dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:paddingRight="15dp"
            android:src="@drawable/back_button" />

        <ImageView
            android:id="@+id/next_button"
            android:layout_width="175dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:src="@drawable/next_button" />

    </LinearLayout>

    <TextView
        android:id="@+id/warnSpamBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:paddingBottom="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="20dp"
        android:text="Be sure to check your Spam folder. It may take up to 10 minutes to receive your activation email. "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
